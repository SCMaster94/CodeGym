    "#Ve duogn xoan oc\n",
    "import turtle\n",
    "t=turtle.Turtle()\n",
    "t.hideturtle()\n",
    "d=0.1\n",
    "t.speed(0)\n",
    "D=float(input(\"Nhap khoang cach de dung vong xoan: \"))\n",
    "while True:\n",
    "    t.left(10)\n",
    "    t.forward(d)\n",
    "    d+=0.1\n",
    "    if turtle.distance(t.pos())>=D:\n",
    "        break"
